<Window x:Class="LibraryManagement.Views.AuthorsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление авторами" Height="450" Width="600" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,5">
            <Button Content="Добавить" Command="{Binding AddAuthorCommand}" Padding="10,5" Margin="5"/>
            <Button Content="Редактировать" Command="{Binding EditAuthorCommand}" CommandParameter="{Binding SelectedItem, ElementName=AuthorsGrid}" Padding="10,5" Margin="5"/>
            <Button Content="Удалить" Command="{Binding DeleteAuthorCommand}" CommandParameter="{Binding SelectedItem, ElementName=AuthorsGrid}" Padding="10,5" Margin="5"/>
        </StackPanel>
        <DataGrid x:Name="AuthorsGrid" Grid.Row="1" ItemsSource="{Binding Authors}" SelectedItem="{Binding SelectedAuthor}" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}" Width="120"/>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}" Width="120"/>
                <DataGridTextColumn Header="Дата рождения" Binding="{Binding BirthDate, StringFormat={}{0:dd.MM.yyyy}}" Width="120"/>
                <DataGridTextColumn Header="Страна" Binding="{Binding Country}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
<Window x:Class="LibraryManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление библиотекой" Height="600" Width="900">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Фильтры -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,5">
            <TextBlock Text="Поиск по названию:" VerticalAlignment="Center" Margin="5,0"/>
            <TextBox Width="200" Margin="5,0" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="Автор:" VerticalAlignment="Center" Margin="5,0"/>
            <ComboBox Width="150" Margin="5,0" ItemsSource="{Binding Authors}" DisplayMemberPath="FullName" 
                      SelectedItem="{Binding SelectedAuthorFilter}"/>
            <TextBlock Text="Жанр:" VerticalAlignment="Center" Margin="5,0"/>
            <ComboBox Width="150" Margin="5,0" ItemsSource="{Binding Genres}" DisplayMemberPath="Name" 
                      SelectedItem="{Binding SelectedGenreFilter}"/>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5">
            <Button Content="Добавить книгу" Command="{Binding AddBookCommand}" Padding="10,5" Margin="5"/>
            <Button Content="Редактировать книгу" Command="{Binding EditBookCommand}" CommandParameter="{Binding SelectedItem, ElementName=BooksGrid}" Padding="10,5" Margin="5"/>
            <Button Content="Удалить книгу" Command="{Binding DeleteBookCommand}" CommandParameter="{Binding SelectedItem, ElementName=BooksGrid}" Padding="10,5" Margin="5"/>
            <Button Content="Управление авторами" Command="{Binding ManageAuthorsCommand}" Padding="10,5" Margin="5"/>
            <Button Content="Управление жанрами" Command="{Binding ManageGenresCommand}" Padding="10,5" Margin="5"/>
        </StackPanel>

        <!-- Таблица книг -->
        <DataGrid x:Name="BooksGrid" Grid.Row="2" ItemsSource="{Binding Books}" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Title}" Width="200"/>
                <DataGridTextColumn Header="Автор" Binding="{Binding Author.FullName}" Width="150"/>
                <DataGridTextColumn Header="Жанр" Binding="{Binding Genre.Name}" Width="120"/>
                <DataGridTextColumn Header="Год" Binding="{Binding PublishYear}" Width="60"/>
                <DataGridTextColumn Header="ISBN" Binding="{Binding ISBN}" Width="120"/>
                <DataGridTextColumn Header="В наличии" Binding="{Binding QuantityInStock}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>